<!-- Views/Department/Index.cshtml -->
@model IEnumerable<ERMS.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>
<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-semibold text-dark mb-0">Departments</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-plus me-1"></i> Create New
            </a>
        }
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Department Name</th>
                            <th class="text-center" style="width: 250px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-medium">@Html.DisplayFor(modelItem => item.DepartmentName)</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-info me-1">
                                        <i class="fas fa-eye me-1"></i> Details
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-warning me-1">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>