@model ERMS.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<h1>Delete Project</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-9">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-9">
            @(Model.EndDate.HasValue ? Model.EndDate.Value.ToShortDateString() : "Not set")
        </dd>
        <dt class="col-sm-3">
            Project Manager
        </dt>
        <dd class="col-sm-9">
            @(Model.Manager != null ? $"{Model.Manager.FirstName} {Model.Manager.LastName}" : "Not assigned")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
